<% layout('./boilerplate')%>
<div class="d-flex justify-content-center">
    <h1>Register</h1>
</div>
<div class="container-fluid d-flex justify-content-center">
    <form>
        <div class="mb-3">
          <label for="email" class="form-label">Email address <span class="text-muted">*</span></label>
          <input type="email" class="form-control" id="email" aria-describedby="emailHelp" required>
          <div id="email" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password <span class="text-muted">*</span></label>
          <input type="password" class="form-control" id="password" required>
        </div>
        <div class="mb-3">
          <label for="passwordCheck" class="form-label">Confirm Password <span class="text-muted">*</span></label>
          <input type="passwordCheck" class="form-control" id="passwordCheck" required>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
</div>