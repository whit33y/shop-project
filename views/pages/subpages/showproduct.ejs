<% layout('./boilerplate')%>
<% if (success && success.length) { %>
  <div class="alert alert-success alert-dismissable fade show" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
      </button>
  </div>
  <% } %>
<div class="card mb-3">
    <img src="<%=product.image%>" onerror="this.src='https://nowywilczak.pl/wp-content/uploads/2016/04/default-placeholder.png'" class="card-img-top" >
    <div class="card-body">
      <h5 class="card-title"><%=product.name%></h5>
      <p class="card-text">Description: <span class="text-muted"><%=product.description%></span></p>
      <p class="card-text">Telephone number: <small class="text-muted"><%=product.number%></small></p>
    </div>
    <form action="/products/<%=product.id%>?_method=DELETE" method="POST">
      <button class="btn btn-danger">Delete product</button>
    </form>
  </div>
 

