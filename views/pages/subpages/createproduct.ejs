<% layout('./boilerplate')%>
<div class="d-flex justify-content-center">
<h1>Create product</h1>
</div>
<form action="/products" method="POST" validate>
    <div class="row mb-3">
      <label for="name" class="col-sm-2 col-form-label">Enter product name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" placeholder="Product name" validate>
      </div>
    </div>
    <div class="row mb-3">
        <label for="description" class="col-sm-2 col-form-label">Enter description:</label>
        <div class="col-sm-10">
        <textarea class="form-control" id="description" rows="2" placeholder="Product description" name="description"></textarea>
      </div>
    </div>
    <!-- <div class="row mb-3">
        <label for="images" class="col-sm-2 col-form-label">Choose images:</label>
        <div class="col-sm-10">
        <input class="form-control" type="file" id="images" multiple>
        </div>  
      </div> -->
      <div class="row mb-3">
        <label for="image" class="col-sm-2 col-form-label">Enter image link: </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="image" name="image" placeholder="Image" validate>
        </div>
      </div>
      <div class="row mb-3">
        <label for="number" class="col-sm-2 col-form-label">Enter your number: </label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="number" placeholder="666-666-666" name="number" validate>
        </div>
      </div>
    <div class="d-flex justify-content-center">
    <button type="submit" class="btn btn-primary">Add product<span class="material-icons">add</span></button>
    </div>
  </form>